{% extends 'base.xml' %}

{% block content %}
<channel>
    <title>{{ podcast.title }}</title>
    <description>{{ podcast.description }}</description>
    <link>{{ podcast.link }}</link>
    <language>{{ podcast.language }}</language>
    <copyright>{{ podcast.copyright }}</copyright>
    <lastBuildDate>{{ last_build_date }}</lastBuildDate>
    <pubDate>{{ podcast.formatted_pub_date }}</pubDate>

    <itunes:subtitle>{{ podcast.subtitle }}</itunes:subtitle>
    <itunes:author>{{ podcast.author }}</itunes:author>
    <itunes:summary>{{ podcast.summary }}</itunes:summary>
    <itunes:image>{{ podcast.image_url }}</itunes:image>
    <itunes:webMaster>{{ podcast.webmaster }}</itunes:webMaster>
    <itunes:owner>
        <itunes:name>{{ podcast.owner }}</itunes:name>
        <itunes:email>{{ podcast.email }}</itunes:email>
    </itunes:owner>

    <itunes:category text="{{ podcast.category }}">
        <itunes:category text="{{ podcast.category }}" />
    </itunes:category>

    {% for item in items %}
    <item>
        <title>{{ item.episode.title }}</title>
        <itunes:author>{{ item.episode.author }}</itunes:author>
        <itunes:subtitle>{{ item.episode.subtitle }}</itunes:subtitle>
        <itunes:summary>{{ item.episode.summary }}</itunes:summary>
        <itunes:duration>{{ item.duration }}</itunes:duration>
        <itunes:keywords>{{ item.episode.keywords }}</itunes:keywords>
        <itunes:image>{{ item.episode.image }}</itunes:image>
        <description>{{ item.episode.description }}</description>
        <enclosure url="{{ item.filename }}" length="{{ item.duration }}" type="{{ item.mime }}"/>
        <pubDate>{{ item.episode.get_pub_date }}</pubDate>
    </item>
    {% endfor %}
</channel>
{% endblock content %}